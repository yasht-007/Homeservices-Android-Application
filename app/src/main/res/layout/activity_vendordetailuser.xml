<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rfla"
    android:layout_height="match_parent"
    tools:context=".Usersidebooking.Vendordetailuser">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/vdback"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vdname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/bree_serif"
            android:text="Yash Tiwari"
            android:textColor="@color/blackTextColor"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/vdservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vdname"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Electrician, Expert"
            android:textSize="13dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightgray"
        android:layout_marginTop="8dp"
        />
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

     <RatingBar
         android:id="@+id/vdratingBar"
         style="?android:attr/ratingBarStyleSmall"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="20dp"
         android:layout_marginTop="12dp" />

     <TextView
         android:id="@+id/vdscore"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="4.5"
         android:textColor="@color/colorAccent"
         android:textStyle="bold"
         android:layout_marginTop="10dp"
         android:layout_marginStart="8dp"
         android:layout_toRightOf="@id/vdratingBar"
         />

     <TextView
         android:id="@+id/vdcharge"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="₹500 - ₹600"
         android:layout_marginTop="12dp"
         android:layout_marginEnd="24dp"
         android:textColor="#000000"
         android:layout_alignParentEnd="true"
         />
 </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightgray"
        android:layout_marginTop="8dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name :- "
            android:layout_marginStart="20dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/namesh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/shname"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/shname"
            android:text="------"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shname"
            android:textSize="13dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/black"
            android:text="Shop at :-"/>

        <TextView
            android:id="@+id/shpadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvadd"
            android:layout_alignBottom="@+id/tvadd"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="-4dp"
            android:layout_toEndOf="@id/tvadd"
            android:text="87, sai samarpan society udhna surat "
            android:textSize="14dp" />

        <TextView
            android:id="@+id/smail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:- "
            android:layout_marginStart="22dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/black"
            android:layout_below="@id/shpadd"
            />

        <TextView
            android:id="@+id/vdemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shpadd"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@id/smail"
            android:textSize="16dp"
            android:text="yashtechie001@gmail.com" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightgray"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/vndbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book now"
            android:textColor="#FFA500"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/vndrbg"
            />
        <Button
            android:id="@+id/btncall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call now"
            android:layout_marginTop="15dp"
            android:background="@drawable/vndrbg"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#ffa500"
            />
    </RelativeLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@color/lightgray"
    android:layout_marginTop="10dp"
    />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/bree_serif"
        android:text="Other Vendors in you city :- " />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vdrecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
