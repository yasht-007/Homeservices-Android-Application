<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ECECEC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Help.HowToBookingServiceFragment">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:fontFamily="AcadEref"
        android:padding="16dp"
        android:text="You can follow the below steps to book a service:"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:background="#fff"
        android:fontFamily="AcadEref"
        android:padding="16dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1.   Search for the category and follow        &#160;&#160;&#160;&#160;&#160;&#160;&#160;need."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:background="#fff"
        android:fontFamily="AcadEref"
        android:padding="16dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:text="2.   Open the category and follow the &#160;&#160;&#160;&#160;&#160;&#160;&#160;instructions as you go forward."/>



</androidx.constraintlayout.widget.ConstraintLayout>
