<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CompletedFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/tv_recentorders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="No recent orders"
        android:textColor="@android:color/black"
        android:textSize="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_recentorders"
        android:layout_centerHorizontal="true"
        android:text="You can start a new\nservice by placing a \n       request now"
        android:textColor="#424242"
        android:layout_marginTop="32dp"
        android:layout_marginStart="120dp"
        android:textSize="18dp" />

    <Button
        android:id="@+id/bookservice"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Book a Service"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/btn"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_nmessage"
        />
    </RelativeLayout>
</ScrollView>